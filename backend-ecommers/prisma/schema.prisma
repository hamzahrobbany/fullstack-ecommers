generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ==========================
/// ğŸ¢ TENANT (Toko / Store)
/// ==========================
model Tenant {
  id        String    @id @default(uuid())
  code      String    @unique
  name      String
  domain    String?   @unique
  address   String?
  email     String?
  phone     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // ğŸ‘ˆ Soft delete

  // Relasi
  products    Product[]
  subscribers Subscriber[]
  users       User[]
  orders      Order[]
  stocks      Stock[]
  orderItems  OrderItem[]
  payments    Payment[]
}

/// ==========================
/// ğŸ‘¤ USERS (Admin, Staff, Customer)
/// ==========================
model User {
  id            String         @id @default(uuid())
  tenantId      String
  name          String
  email         String         @unique
  password      String
  role          Role           @default(CUSTOMER)
  refreshTokens RefreshToken[]
  orders        Order[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deletedAt     DateTime? // ğŸ‘ˆ Soft delete

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

/// ==========================
/// ğŸ” REFRESH TOKENS (Auth)
/// ==========================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// ==========================
/// â˜• PRODUCTS
/// ==========================
model Product {
  id          String    @id @default(uuid())
  tenantId    String
  name        String
  category    String?
  description String?
  price       Int
  stock       Int       @default(0)
  image       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime? // ğŸ‘ˆ Soft delete

  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
  stocks     Stock[]

  @@index([tenantId])
}

/// ==========================
/// ğŸ“¦ STOCKS (Per lokasi)
/// ==========================
model Stock {
  id        String    @id @default(uuid())
  productId String
  tenantId  String
  location  String?
  quantity  Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // ğŸ‘ˆ Soft delete

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, productId])
}

/// ==========================
/// âœ‰ï¸ SUBSCRIBERS (Newsletter)
/// ==========================
model Subscriber {
  id         String   @id @default(uuid())
  tenantId   String
  email      String
  name       String?
  subscribed Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, email])
  @@index([tenantId])
}

/// ==========================
/// ğŸ§¾ ORDERS
/// ==========================
model Order {
  id          String      @id @default(uuid())
  tenantId    String
  userId      String
  totalAmount Int
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deletedAt   DateTime? // ğŸ‘ˆ Soft delete

  tenant  Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items   OrderItem[]
  payment Payment?

  @@index([tenantId])
}

/// ==========================
/// ğŸ›’ ORDER ITEMS
/// ==========================
model OrderItem {
  id        String    @id @default(uuid())
  orderId   String
  productId String
  tenantId  String
  quantity  Int
  subtotal  Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // ğŸ‘ˆ Soft delete

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, orderId])
}

/// ==========================
/// ğŸ’³ PAYMENTS
/// ==========================
model Payment {
  id            String        @id @default(uuid())
  tenantId      String
  orderId       String        @unique
  method        PaymentMethod @default(CASH)
  amount        Int
  status        PaymentStatus @default(PENDING)
  transactionId String?       @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  deletedAt     DateTime? // ğŸ‘ˆ Soft delete

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  order  Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

/// ==========================
/// ğŸ“š ENUMS
/// ==========================
enum Role {
  OWNER
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CASH
  TRANSFER
  QRIS
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
