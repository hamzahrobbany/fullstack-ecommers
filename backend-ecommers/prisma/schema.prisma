generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ==========================
/// üè¢ TENANT (Toko / Store)
/// ==========================
model Tenant {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  domain    String?  @unique
  address   String?
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi
  products    Product[]
  subscribers Subscriber[]
  users       User[]
  orders      Order[]
}

/// ==========================
/// üë§ USERS (Admin, Staff, Customer)
/// ==========================
model User {
  id            String         @id @default(uuid())
  tenantId      String
  name          String
  email         String         @unique
  password      String
  role          Role           @default(CUSTOMER)
  refreshTokens RefreshToken[] // relasi ke token
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Relasi
  tenant Tenant  @relation(fields: [tenantId], references: [id])
  orders Order[]
}

/// ==========================
/// üîê REFRESH TOKENS (Auth)
/// ==========================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// ==========================
/// ‚òï PRODUCTS
/// ==========================
model Product {
  id          String   @id @default(uuid())
  tenantId    String
  name        String
  category    String?          // ‚úÖ tambahkan field ini
  description String?
  price       Int
  stock       Int      @default(0) // ‚úÖ tambahkan field ini
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant     Tenant      @relation(fields: [tenantId], references: [id])
  orderItems OrderItem[]
  stocks     Stock[]
}

/// ==========================
/// üì¶ STOCKS (dipisah per lokasi)
/// ==========================
model Stock {
  id        String   @id @default(uuid())
  productId String
  tenantId  String
  location  String?
  quantity  Int      @default(0)
  updatedAt DateTime @updatedAt

  // Relasi
  product Product @relation(fields: [productId], references: [id])
  tenant  Tenant  @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@index([tenantId, productId])
}

/// ==========================
/// ‚úâÔ∏è SUBSCRIBERS (Newsletter)
/// ==========================
model Subscriber {
  id         String   @id @default(uuid())
  tenantId   String
  email      String
  name       String?
  subscribed Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, email])
}

/// ==========================
/// üßæ ORDERS
/// ==========================
model Order {
  id          String      @id @default(uuid())
  tenantId    String
  userId      String
  totalAmount Int
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relasi
  tenant  Tenant      @relation(fields: [tenantId], references: [id])
  user    User        @relation(fields: [userId], references: [id])
  items   OrderItem[]
  payment Payment?
}

/// ==========================
/// üõí ORDER ITEMS
/// ==========================
model OrderItem {
  id        String @id @default(uuid())
  orderId   String
  productId String
  tenantId  String
  quantity  Int
  subtotal  Int

  // Relasi
  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  tenant  Tenant  @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
}

/// ==========================
/// üí≥ PAYMENTS
/// ==========================
model Payment {
  id            String        @id @default(uuid())
  orderId       String        @unique
  method        PaymentMethod @default(CASH)
  amount        Int
  status        PaymentStatus @default(PENDING)
  transactionId String?       @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  order Order @relation(fields: [orderId], references: [id])
}

/// ==========================
/// üìö ENUMS
/// ==========================
enum Role {
  OWNER
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CASH
  TRANSFER
  QRIS
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
